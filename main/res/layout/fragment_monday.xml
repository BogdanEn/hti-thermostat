<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bobo.thermostat.MondayFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/Lista"
        android:layout_width="373dp"
        android:layout_height="373dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:colorEdgeEffect="@color/color_blue"
        android:divider="@null"
        android:listSelector="#00000000" />
    <!-- aici era faza pentru a seta feedback la culori!!!
    listSelector="#00000000"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/Lista"
            android:elevation="40dp"
            android:gravity="center">

            <Button
                android:id="@+id/addScheduleButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:onClick="addSchedule"
                android:text="Add"
                tools:layout_editor_absoluteX="148dp"
                tools:layout_editor_absoluteY="428dp" />

            <Button
                android:id="@+id/testButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/addScheduleButton"
                android:layout_alignParentStart="true"
                android:layout_marginStart="21dp"
                android:onClick="test"
                android:text="Button"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="428dp" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>
